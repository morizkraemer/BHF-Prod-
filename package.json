{
  "name": "produktionstool",
  "version": "1.0.0",
  "private": true,
  "description": "Produktionstool monorepo: Electron app + API backend",
  "scripts": {
    "dev": "npm run dev --prefix apps/electron",
    "dev:electron": "pnpm --filter nightclub-production-tool dev",
    "dev:backend": "pnpm --filter produktionstool-api dev",
    "start:electron": "pnpm --filter nightclub-production-tool start",
    "start:backend": "pnpm --filter produktionstool-api start",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "keywords": ["produktionstool", "electron", "backend"],
  "license": "MIT"
}
